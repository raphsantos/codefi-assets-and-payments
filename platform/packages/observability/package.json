{
  "name": "@consensys/observability",
  "version": "2.2.0",
  "description": "",
  "main": "dist/index.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "example": "ts-node-dev example.ts",
    "test": "jest src",
    "test:cov": "jest src --ci --coverage",
    "prettier": "prettier --write '{src,apps,libs,test}/**/*.ts'",
    "prettier:check": "prettier --check '{src,apps,libs,test}/**/*.ts'",
    "lint": "eslint --cache '{src,apps,libs,test}/**/*.ts'",
    "lint:fix": "eslint --cache --fix '{src,apps,libs,test}/**/*.ts'",
    "release": "standard-version"
  },
  "license": "Apache",
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^28.0.0",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/node": "^18.0.0",
    "@types/pino": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "jest": "^28.0.3",
    "jest-create-mock-instance": "^2.0.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.3.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^28.0.1",
    "ts-node-dev": "^1.0.0-pre.62",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@elastic/ecs-pino-format": "^0.1.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^9.0.5",
    "dotenv": "^8.2.0",
    "elastic-apm-node": "^3.36.0",
    "elastic-apm-node-opentracing": "^2.0.0",
    "express-pino-logger": "^7.0.0",
    "jsonwebtoken": "^8.5.1",
    "nestjs-pino": "^2.5.1",
    "on-headers": "^1.0.2",
    "pino": "^8.0.0",
    "pino-http": "^8.0.0",
    "pino-pretty": "^7.6.0",
    "prom-client": "^12.0.0",
    "prometheus-api-metrics": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!**/*Module.ts"
    ],
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "coverageDirectory": "./coverage"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run lint:fix --",
      "npm run prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test"
    }
  }
}
