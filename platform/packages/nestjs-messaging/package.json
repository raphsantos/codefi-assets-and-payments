{
  "name": "@consensys/nestjs-messaging",
  "version": "8.1.0",
  "description": "",
  "main": "dist/index.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest src",
    "test:cov": "jest src --coverage",
    "prettier": "prettier --write '{src,apps,libs,test}/**/*.ts'",
    "prettier:check": "prettier --check '{src,apps,libs,test}/**/*.ts'",
    "lint": "eslint --cache '{src,apps,libs,test}/**/*.ts'",
    "lint:fix": "eslint --cache --fix '{src,apps,libs,test}/**/*.ts'",
    "release": "standard-version"
  },
  "license": "Apache",
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "jest-create-mock-instance": "^2.0.0",
    "lint-staged": "^10.3.0",
    "prettier": "^2.3.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.3",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@consensys/messaging-events": "workspace:*",
    "@consensys/observability": "workspace:*",
    "@kafkajs/confluent-schema-registry": "^1.0.4",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^9.0.5",
    "@nestjs/terminus": "^8.0.0",
    "dotenv": "^8.2.0",
    "iterare": "^1.2.0",
    "kafkajs": "^1.16.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/dist/",
      "/coverage",
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!**/*Module.ts",
      "!src/index.ts",
      "!src/preview/*.ts"
    ],
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "coverageDirectory": "./coverage"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run lint:fix --",
      "npm run prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test"
    }
  }
}
