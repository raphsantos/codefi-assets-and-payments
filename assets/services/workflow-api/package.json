{
  "name": "@consensys/workflow-api",
  "private": true,
  "version": "0.1.97",
  "description": "Repository of Workflow API used Digital Assets Platform",
  "license": "Apache",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "docker": "docker-compose up --build",
    "docker:detached": "docker-compose up --build -d",
    "docker:down": "docker-compose down",
    "prettier": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prettier:check": "echo 'Disabled for the moment'",
    "start": "nest start",
    "stop": "kill -9 $(lsof -t -i:3000)",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug 0.0.0.0 --watch",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts'",
    "lint:fix": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "readiness:check": "PIPELINE=true ts-node integration/utils/readyCheck.ts",
    "release": "standard-version",
    "test": "jest src",
    "test:watch": "jest src --watch",
    "test:cov": "APP_ENV=test jest test/functional src --coverage --detectOpenHandles --bail --runInBand --forceExit",
    "test:functional": "APP_ENV=test jest test/functional --detectOpenHandles --bail --runInBand --forceExit",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/ormconfig.ts",
    "typeorm:create": "npm run typeorm migration:create -- -n",
    "typeorm:run": "npm run typeorm migration:run"
  },
  "dependencies": {
    "@consensys/observability": "workspace:*",
    "@hapi/joi": "^16.1.8",
    "@nestjs/axios": "^0.0.8",
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "2.1.0",
    "@nestjs/core": "^8.4.7",
    "@nestjs/platform-express": "^8.4.7",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/terminus": "^8.1.0",
    "@nestjs/typeorm": "^8.1.4",
    "axios": "^0.27.2",
    "axios-retry": "^3.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.1",
    "elastic-apm-node": "^3.5.0",
    "install": "^0.13.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.1.0",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@nestjs/cli": "^8.2.8",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.7",
    "@types/express": "^4.17.4",
    "@types/hapi__joi": "^16.0.12",
    "@types/jest": "^27.0.0",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^27.0.0",
    "jest-create-mock-instance": "^2.0.0",
    "jest-junit": "^13.2.0",
    "npm": "^8.12.1",
    "prettier": "^2.6.2",
    "standard-version": "^9.0.0",
    "supertest": "^6.2.3",
    "ts-jest": "^27.0.0",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">= 18.4.0",
    "npm": ">= 8.12.1"
  },
  "jest": {
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^test/(.*)$": "<rootDir>/test/$1"
    },
    "setupFiles": [
      "<rootDir>/test/setEnvVars.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 10,
        "branches": 10,
        "functions": 10,
        "lines": 10
      }
    },
    "rootDir": "./",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/dist/",
      "/coverage",
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/*/**/*.{ts,js}",
      "!src/**/{server,sleep,jwtUtils}.{ts,js}",
      "!src/{validation,modules,guards}/**",
      "!src/services/instances/**",
      "!src/controllers/HealthController.ts",
      "!src/migrations/**",
      "!src/utils/migrationUtils.ts"
    ],
    "coverageDirectory": "./coverage",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testEnvironment": "node"
  }
}
